{
    "name": "takeit/amp-html-bundle",
    "type": "symfony-bundle",
    "description": "Provide AMP HTML conversion to your Symfony2/Symfony3 projects.",
    "keywords": ["amphtml", "amp-html", "amp", "google", "html"],
    "license":"MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Rafał Muszyński",
            "email": "rmuszynski1@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.9|^7.0",
        "lullabot/amp": "1.0.*",
        "symfony/framework-bundle": "^2.3|^3.0",
        "symfony/twig-bundle": "^2.3|^3.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.4"
    },
    "autoload": {
        "exclude-from-classmap": [
            "spec/"
        ],
        "psr-4": { "Takeit\\Bundle\\AmpHtmlBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": {
            "Takeit\\Bundle\\AmpHtmlBundle\\spec\\": "spec/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2-dev"
        }
    }
}
